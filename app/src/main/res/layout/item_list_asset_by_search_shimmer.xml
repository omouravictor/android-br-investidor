<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvAssetSymbol"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:background="@color/itemListPressedTrue"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/vLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".25" />

    <TextView
        android:id="@+id/tvAssetName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/itemListPressedTrue"
        app:layout_constraintBottom_toBottomOf="@+id/tvAssetSymbol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvAssetSymbol"
        app:layout_constraintWidth_percent=".4" />

    <View
        android:id="@+id/vLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/itemListPressedTrue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvAssetName"
        app:layout_constraintStart_toStartOf="@+id/tvAssetSymbol" />

</androidx.constraintlayout.widget.ConstraintLayout>
