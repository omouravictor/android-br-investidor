<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewFlipper"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/incWalletLoadingLayout"
        layout="@layout/shimmer_wallet_success" />

    <include
        android:id="@+id/incEmptyWalletLayout"
        layout="@layout/layout_empty_wallet" />

    <include
        android:id="@+id/incWalletSuccessLayout"
        layout="@layout/layout_wallet_success" />

    <include
        android:id="@+id/incWalletErrorLayout"
        layout="@layout/layout_error_try_again" />

</ViewFlipper>