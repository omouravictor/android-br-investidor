<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/defaultSpace">

    <TextView
        android:id="@+id/tvAccountConfigs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/accountConfigs"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/incChancePersonalData"
        layout="@layout/item_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvAccountConfigs" />

    <include
        android:id="@+id/incDeleteAccount"
        layout="@layout/item_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/incChancePersonalData" />

    <TextView
        android:id="@+id/tvSecurityConfigs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="@string/securityConfigs"
        app:layout_constraintTop_toBottomOf="@+id/incDeleteAccount" />

    <include
        android:id="@+id/incBtnLogout"
        layout="@layout/button_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/defaultSpace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>