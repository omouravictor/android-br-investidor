<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/defaultPadding">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/defaultMargin"
        android:layout_weight="1"
        android:src="@drawable/ic_graphic" />

    <TextView
        android:id="@+id/tvTittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/emptyAssetTittle"
        android:textAlignment="center"
        android:textSize="@dimen/textSize5"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/emptyAssetDescription"
        android:textAlignment="center"
        android:textColor="@color/grayDayNightColor"
        android:textSize="@dimen/textSize4" />

    <include
        android:id="@+id/incBtnAddAssets"
        layout="@layout/button_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp" />

</LinearLayout>