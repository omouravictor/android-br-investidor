<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/tvSymbol"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:background="@drawable/background_rectangle_1"
        android:backgroundTint="@color/shimmerBackColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/tvAssetType"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/background_rectangle_1"
        android:backgroundTint="@color/shimmerBackColor"
        app:layout_constraintStart_toEndOf="@+id/tvSymbol"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".2" />

    <View
        android:id="@+id/asd"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_rectangle_1"
        android:backgroundTint="@color/shimmerBackColor"
        app:layout_constraintStart_toEndOf="@+id/tvSymbol"
        app:layout_constraintTop_toBottomOf="@+id/tvAssetType"
        app:layout_constraintWidth_percent=".2" />

    <View
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_rectangle_1"
        android:backgroundTint="@color/shimmerBackColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSymbol"
        app:layout_constraintWidth_percent=".2" />

    <View
        android:id="@+id/qweq"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_rectangle_1"
        android:backgroundTint="@color/shimmerBackColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/asd"
        app:layout_constraintWidth_percent=".2" />

</androidx.constraintlayout.widget.ConstraintLayout>