<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/incBtnNewTransaction"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/mainLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include
                    android:id="@+id/incCardConversionRate"
                    layout="@layout/card_conversion_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp" />

                <TextView
                    android:id="@+id/assetSectionTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/defaultPadding"
                    android:text="@string/Asset"
                    android:textSize="@dimen/textSize4"
                    android:textStyle="bold" />

                <TableLayout
                    android:id="@+id/assetSectionTableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingHorizontal="@dimen/defaultPadding"
                    android:stretchColumns="1">

                    <TableRow>

                        <TextView
                            android:id="@+id/tvTitleExchange"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:text="@string/symbol"
                            android:textColor="@color/tableTittleTextColor" />

                        <TextView
                            android:id="@+id/tvSymbol"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="end|center_vertical"
                            android:maxLines="2"
                            tools:text="AAPL" />
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="10dp"
                        android:background="@color/lineColor" />

                    <TableRow>

                        <TextView
                            android:id="@+id/tvCompanyNameTittle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:text="@string/company"
                            android:textColor="@color/tableTittleTextColor" />

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="end|center_vertical"
                            android:maxLines="2"
                            tools:text="Apple Inc" />
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="10dp"
                        android:background="@color/lineColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvTittleAssetType"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/type"
                            android:textColor="@color/tableTittleTextColor" />

                        <TextView
                            android:id="@+id/tvAssetType"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/rectangle"
                            android:ellipsize="end"
                            android:gravity="end|center_vertical"
                            android:maxLines="2"
                            android:paddingHorizontal="8dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            tools:backgroundTint="@color/stock"
                            tools:text="Stock" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="10dp"
                        android:background="@color/lineColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvTittleCurrencyBuy"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/currencyBuy"
                            android:textColor="@color/tableTittleTextColor" />

                        <TextView
                            android:id="@+id/tvAssetCurrency"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/rectangle"
                            android:ellipsize="end"
                            android:gravity="end|center_vertical"
                            android:maxLines="2"
                            android:paddingHorizontal="8dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            tools:backgroundTint="@color/usd"
                            tools:text="USD" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="10dp"
                        android:background="@color/lineColor" />

                    <TableRow>

                        <TextView
                            android:id="@+id/tvTittleCurrentPrice"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:text="@string/currentPrice"
                            android:textColor="@color/tableTittleTextColor" />

                        <TextView
                            android:id="@+id/tvPrice"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="end|center_vertical"
                            android:maxLines="2"
                            tools:text="US$100,00" />
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="10dp"
                        android:background="@color/lineColor" />

                    <androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:id="@+id/tvTittleLastChange"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:text="@string/lastChange"
                            android:textColor="@color/tableTittleTextColor"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvChange"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="end|center_vertical"
                            android:maxLines="2"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="+R$ 100,00 (+15,45%)"
                            tools:textColor="@color/green" />

                        <include
                            android:id="@+id/incChangeShimmer"
                            layout="@layout/shimmer_item"
                            android:layout_width="0dp"
                            android:layout_height="6dp"
                            app:layout_constraintBottom_toBottomOf="@+id/tvChange"
                            app:layout_constraintEnd_toEndOf="@+id/tvChange"
                            app:layout_constraintTop_toTopOf="@+id/tvChange"
                            app:layout_constraintWidth_percent=".25" />

                        <ImageView
                            android:id="@+id/ivChangeReload"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:src="@drawable/ic_reload"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="@+id/tvChange"
                            app:layout_constraintEnd_toEndOf="@+id/tvChange"
                            app:layout_constraintTop_toTopOf="@+id/tvChange"
                            tools:visibility="visible" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/lineColor" />

                </TableLayout>

                <TextView
                    android:id="@+id/tvWalletSectionTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingHorizontal="@dimen/defaultPadding"
                    android:text="@string/wallet"
                    android:textSize="@dimen/textSize4"
                    android:textStyle="bold" />

                <TableLayout
                    android:id="@+id/walletSectionTableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingHorizontal="@dimen/defaultPadding"
                    android:stretchColumns="1">

                    <TableRow>

                        <TextView
                            android:id="@+id/tvAmountTittle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:text="@string/amount"
                            android:textColor="@color/tableTittleTextColor" />

                        <TextView
                            android:id="@+id/tvAmount"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="end|center_vertical"
                            android:maxLines="2"
                            tools:text="1" />
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="10dp"
                        android:background="@color/lineColor" />

                    <TableRow>

                        <TextView
                            android:id="@+id/tvTittleCurrentPosition"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:text="@string/currentPosition"
                            android:textColor="@color/tableTittleTextColor" />

                        <TextView
                            android:id="@+id/tvTotalPrice"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="end|center_vertical"
                            android:maxLines="2"
                            tools:text="R$ 38,26" />
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="10dp"
                        android:background="@color/lineColor" />

                    <TableRow>

                        <TextView
                            android:id="@+id/tvTittleTotalInvested"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:text="@string/totalInvested"
                            android:textColor="@color/tableTittleTextColor" />

                        <TextView
                            android:id="@+id/tvTotalInvested"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="end|center_vertical"
                            android:maxLines="2"
                            tools:text="R$ 100,00" />
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="10dp"
                        android:background="@color/lineColor" />

                    <TableRow>

                        <TextView
                            android:id="@+id/tvTittleYield"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:text="@string/yield"
                            android:textColor="@color/tableTittleTextColor" />

                        <TextView
                            android:id="@+id/tvYield"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="end|center_vertical"
                            android:maxLines="2"
                            tools:text="+R$ 100,00 (+15,45%)"
                            tools:textColor="@color/green" />
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/lineColor" />

                </TableLayout>

            </LinearLayout>

            <include
                android:id="@+id/incProgressBar"
                layout="@layout/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <include
        android:id="@+id/incBtnNewTransaction"
        layout="@layout/button_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:elevation="5dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>