<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/defaultPadding">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rowCurrencyConversion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvCurrencyRateTittle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    app:layout_constraintEnd_toStartOf="@+id/tvCurrencyRate"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Cotação USD" />

                <TextView
                    android:id="@+id/tvCurrencyRate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:maxLines="1"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tvCurrencyRateTittle"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="R$ 5,43" />

                <TextView
                    android:id="@+id/tvCurrencyConversionTittle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/tvCurrencyRateTittle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvCurrencyRateTittle"
                    tools:text="Exibir em moeda local (BRL)" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchCurrencyConversion"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:theme="@style/AppSwitchStyle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tvCurrencyConversionTittle"
                    app:layout_constraintTop_toTopOf="@+id/tvCurrencyConversionTittle" />

                <include
                    android:id="@+id/incSwitchShimmer"
                    layout="@layout/shimmer_item"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvCurrencyConversionTittle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent=".3"
                    app:layout_constraintTop_toTopOf="@+id/tvCurrencyConversionTittle"
                    app:layout_constraintWidth_percent=".1" />

                <ImageView
                    android:id="@+id/ivSwitchReload"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_reload"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/tvCurrencyConversionTittle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvCurrencyConversionTittle"
                    tools:visibility="visible" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tvAssetSectionTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Ativo"
                android:textSize="@dimen/textSize4"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rowCurrencyConversion" />

            <TableLayout
                android:id="@+id/assetSectionTableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:stretchColumns="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAssetSectionTitle">

                <TableRow>

                    <TextView
                        android:id="@+id/tvSymbolTittle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:text="@string/symbol"
                        android:textColor="@color/tableTittleTextColor" />

                    <TextView
                        android:id="@+id/tvSymbol"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="end|center_vertical"
                        android:maxLines="2"
                        tools:text="AAPL" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="10dp"
                    android:background="@color/lineColor" />

                <TableRow>

                    <TextView
                        android:id="@+id/tvCompanyNameTittle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:text="@string/company"
                        android:textColor="@color/tableTittleTextColor" />

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="end|center_vertical"
                        android:maxLines="2"
                        tools:text="Apple Inc" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="10dp"
                    android:background="@color/lineColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvTittleAssetType"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/type"
                        android:textColor="@color/tableTittleTextColor" />

                    <TextView
                        android:id="@+id/tvAssetType"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/rectangle"
                        android:ellipsize="end"
                        android:gravity="end|center_vertical"
                        android:maxLines="2"
                        android:paddingHorizontal="8dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        tools:backgroundTint="@color/stock"
                        tools:text="Stock" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="10dp"
                    android:background="@color/lineColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvTittleCurrencyBuy"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/currencyBuy"
                        android:textColor="@color/tableTittleTextColor" />

                    <TextView
                        android:id="@+id/tvAssetCurrency"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/rectangle"
                        android:ellipsize="end"
                        android:gravity="end|center_vertical"
                        android:maxLines="2"
                        android:paddingHorizontal="8dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        tools:backgroundTint="@color/usd"
                        tools:text="USD" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="10dp"
                    android:background="@color/lineColor" />

                <TableRow>

                    <TextView
                        android:id="@+id/tvTittleCurrentPrice"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:text="@string/currentPrice"
                        android:textColor="@color/tableTittleTextColor" />

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="end|center_vertical"
                        android:maxLines="2"
                        tools:text="US$100,00" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="10dp"
                    android:background="@color/lineColor" />

                <androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/tvTittleLastChange"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:text="@string/lastChange"
                        android:textColor="@color/tableTittleTextColor"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvChange"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="end|center_vertical"
                        android:maxLines="2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="+R$ 100,00 (+15,45%)"
                        tools:textColor="@color/green" />

                    <include
                        android:id="@+id/incChangeShimmer"
                        layout="@layout/shimmer_item"
                        android:layout_width="0dp"
                        android:layout_height="6dp"
                        app:layout_constraintBottom_toBottomOf="@+id/tvChange"
                        app:layout_constraintEnd_toEndOf="@+id/tvChange"
                        app:layout_constraintTop_toTopOf="@+id/tvChange"
                        app:layout_constraintWidth_percent=".25" />

                    <ImageView
                        android:id="@+id/ivChangeReload"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:src="@drawable/ic_reload"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/tvChange"
                        app:layout_constraintEnd_toEndOf="@+id/tvChange"
                        app:layout_constraintTop_toTopOf="@+id/tvChange"
                        tools:visibility="visible" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/lineColor" />

            </TableLayout>

            <TextView
                android:id="@+id/tvWalletSectionTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/wallet"
                android:textSize="@dimen/textSize4"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/assetSectionTableLayout" />

            <TableLayout
                android:id="@+id/walletSectionTableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:stretchColumns="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvWalletSectionTitle">

                <TableRow>

                    <TextView
                        android:id="@+id/tvAmountTittle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:text="@string/amount"
                        android:textColor="@color/tableTittleTextColor" />

                    <TextView
                        android:id="@+id/tvAmount"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="end|center_vertical"
                        android:maxLines="2"
                        tools:text="1" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="10dp"
                    android:background="@color/lineColor" />

                <TableRow>

                    <TextView
                        android:id="@+id/tvTittleCurrentPosition"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:text="@string/currentPosition"
                        android:textColor="@color/tableTittleTextColor" />

                    <TextView
                        android:id="@+id/tvTotalPrice"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="end|center_vertical"
                        android:maxLines="2"
                        tools:text="R$ 38,26" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="10dp"
                    android:background="@color/lineColor" />

                <TableRow>

                    <TextView
                        android:id="@+id/tvTittleTotalInvested"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:text="@string/totalInvested"
                        android:textColor="@color/tableTittleTextColor" />

                    <TextView
                        android:id="@+id/tvTotalInvested"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="end|center_vertical"
                        android:maxLines="2"
                        tools:text="R$ 100,00" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="10dp"
                    android:background="@color/lineColor" />

                <TableRow>

                    <TextView
                        android:id="@+id/tvTittleYield"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:text="@string/yield"
                        android:textColor="@color/tableTittleTextColor" />

                    <TextView
                        android:id="@+id/tvYield"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="end|center_vertical"
                        android:maxLines="2"
                        tools:text="+R$ 100,00 (+15,45%)"
                        tools:textColor="@color/green" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/lineColor" />

            </TableLayout>

            <include
                android:id="@+id/incBtnNewTransaction"
                layout="@layout/button_default"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/walletSectionTableLayout" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/incProgressBar"
            layout="@layout/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>