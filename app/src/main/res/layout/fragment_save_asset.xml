<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/defaultPaddingTop"
    tools:context=".presenter.wallet.save_asset.SaveAssetFragment">

    <TextView
        android:id="@+id/tvTittleAssetSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/asset"
        app:layout_constraintStart_toStartOf="@+id/etAssetSymbol"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etAssetSymbol"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/defaultMarginStart"
        android:backgroundTint="@color/gray"
        android:cursorVisible="false"
        android:drawableEnd="@drawable/ic_arrow_forward"
        android:focusable="false"
        android:hint="@string/select"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTittleAssetSymbol"
        app:layout_constraintWidth_percent="0.4"
        tools:drawableTint="@color/green" />

    <TextView
        android:id="@+id/tvTittleQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/amount"
        app:layout_constraintStart_toStartOf="@+id/etQuantity"
        app:layout_constraintTop_toTopOf="@+id/tvTittleAssetSymbol" />

    <EditText
        android:id="@+id/etQuantity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/defaultMarginEnd"
        android:backgroundTint="@color/gray"
        android:hint="@string/number_1"
        android:inputType="number"
        android:text="@string/number_1"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/etAssetSymbol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etAssetSymbol"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/tvTittleTotalInvested"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/totalInvested"
        app:layout_constraintStart_toStartOf="@+id/etAssetSymbol"
        app:layout_constraintTop_toBottomOf="@+id/etAssetSymbol" />

    <EditText
        android:id="@+id/etTotalInvested"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/gray"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/etQuantity"
        app:layout_constraintStart_toStartOf="@+id/tvTittleTotalInvested"
        app:layout_constraintTop_toBottomOf="@+id/tvTittleTotalInvested"
        tools:hint="R$ 100,00" />

    <TextView
        android:id="@+id/tvTittleCurrentPosition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/defaultMarginHorizontal"
        android:layout_marginTop="16dp"
        android:text="@string/currentPosition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etTotalInvested" />

    <include
        android:id="@+id/incAssetPreview"
        layout="@layout/item_list_asset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/defaultMarginHorizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTittleCurrentPosition" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="@dimen/defaultButtonHeight"
        android:layout_marginHorizontal="@dimen/defaultMarginHorizontal"
        android:layout_marginTop="24dp"
        android:enabled="false"
        android:text="@string/save"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/incAssetPreview" />

</androidx.constraintlayout.widget.ConstraintLayout>