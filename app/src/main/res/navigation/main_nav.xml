<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@+id/nav_fragment_wallet">

    <fragment
        android:id="@+id/nav_fragment_wallet"
        android:name="com.omouravictor.invest_view.ui.wallet.WalletFragment"
        android:label="@string/label_wallet"
        tools:layout="@layout/fragment_wallet">
        <action
            android:id="@+id/action_fragment_wallet_to_fragment_select_asset_type"
            app:destination="@id/fragment_select_asset_type" />
    </fragment>

    <fragment
        android:id="@+id/fragment_select_asset_type"
        android:name="com.omouravictor.invest_view.ui.wallet.new_asset.SelectAssetTypeFragment"
        android:label="@string/label_new_asset"
        tools:layout="@layout/fragment_select_asset_type" >
        <action
            android:id="@+id/action_fragment_select_asset_type_to_fragment_select_asset"
            app:destination="@id/fragment_select_asset" />
    </fragment>

    <fragment
        android:id="@+id/fragment_select_asset"
        android:name="com.omouravictor.invest_view.ui.wallet.new_asset.SelectAssetFragment"
        android:label="@string/label_new_asset"
        tools:layout="@layout/fragment_select_asset" />

</navigation>