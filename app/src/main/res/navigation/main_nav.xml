<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@+id/fragmentWallet">

    <fragment
        android:id="@+id/fragmentWallet"
        android:name="com.omouravictor.invest_view.ui.wallet.WalletFragment"
        android:label="@string/label_wallet"
        tools:layout="@layout/fragment_wallet">
        <action
            android:id="@+id/walletFragmentToSelectAssetTypeFragment"
            app:destination="@id/fragmentSelectAssetType" />
    </fragment>

    <fragment
        android:id="@+id/fragmentSelectAssetType"
        android:name="com.omouravictor.invest_view.ui.wallet.new_asset.asset_type.SelectAssetTypeFragment"
        android:label="@string/label_new_asset"
        tools:layout="@layout/fragment_select_asset_type">
        <action
            android:id="@+id/selectAssetTypeFragmentToCreateAssetFragment"
            app:destination="@id/fragmentCreateAsset" />
    </fragment>

    <fragment
        android:id="@+id/fragmentCreateAsset"
        android:name="com.omouravictor.invest_view.ui.wallet.new_asset.asset.CreateAssetFragment"
        tools:layout="@layout/fragment_create_asset">
        <argument
            android:name="assetTypeName"
            app:argType="string" />
    </fragment>

</navigation>