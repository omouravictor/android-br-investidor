<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/walletNavMenu"
    app:startDestination="@+id/fragmentWallet">

    <fragment
        android:id="@+id/fragmentWallet"
        android:name="com.omouravictor.invest_view.presenter.wallet.WalletFragment"
        android:label="@string/wallet"
        tools:layout="@layout/fragment_wallet">
        <action
            android:id="@+id/navToSelectAssetTypeFragment"
            app:destination="@id/fragmentSelectAssetType" />
    </fragment>

    <fragment
        android:id="@+id/fragmentSelectAssetType"
        android:name="com.omouravictor.invest_view.presenter.wallet.asset_type.SelectAssetTypeFragment"
        android:label="@string/new_asset"
        tools:layout="@layout/fragment_select_asset_type">
        <action
            android:id="@+id/navToSaveAssetFragment"
            app:destination="@id/fragmentSaveAsset" />
    </fragment>

    <fragment
        android:id="@+id/fragmentSaveAsset"
        android:name="com.omouravictor.invest_view.presenter.wallet.assets.SaveAssetFragment"
        tools:layout="@layout/fragment_save_asset">
        <argument
            android:name="assetTypeUiModel"
            app:argType="com.omouravictor.invest_view.presenter.wallet.asset_type.AssetTypeUiModel" />
        <action
            android:id="@+id/navToSelectAssetFragment"
            app:destination="@id/fragmentSelectAsset" />
    </fragment>

    <fragment
        android:id="@+id/fragmentSelectAsset"
        android:name="com.omouravictor.invest_view.presenter.wallet.assets.SearchAssetFragment"
        tools:layout="@layout/fragment_search_asset">
        <argument
            android:name="assetTypeUiModel"
            app:argType="com.omouravictor.invest_view.presenter.wallet.asset_type.AssetTypeUiModel" />
    </fragment>

</navigation>