<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/walletNavMenu"
    app:startDestination="@+id/fragmentWallet">

    <fragment
        android:id="@+id/fragmentWallet"
        android:name="com.omouravictor.invest_view.presenter.wallet.WalletFragment"
        android:label="@string/wallet"
        tools:layout="@layout/fragment_wallet">
        <action
            android:id="@+id/navToAssetTypesFragment"
            app:destination="@id/fragmentAssetTypes" />
    </fragment>

    <fragment
        android:id="@+id/fragmentAssetTypes"
        android:name="com.omouravictor.invest_view.presenter.wallet.assets.asset_types.AssetTypesFragment"
        android:label="@string/asset_types"
        tools:layout="@layout/fragment_asset_types">
        <action
            android:id="@+id/navToSaveAssetFragment"
            app:destination="@id/fragmentSaveAsset" />
    </fragment>

    <fragment
        android:id="@+id/fragmentSaveAsset"
        android:name="com.omouravictor.invest_view.presenter.wallet.assets.save_asset.SaveAssetFragment"
        tools:layout="@layout/fragment_save_asset">
        <argument
            android:name="assetTypeUi"
            app:argType="com.omouravictor.invest_view.presenter.wallet.assets.asset_types.model.AssetTypeUiModel" />
        <action
            android:id="@+id/navToAssetSearchFragment"
            app:destination="@id/fragmentAssetSearch" />
    </fragment>

    <fragment
        android:id="@+id/fragmentAssetSearch"
        android:name="com.omouravictor.invest_view.presenter.wallet.assets.asset_search.AssetSearchFragment"
        tools:layout="@layout/fragment_asset_search">
        <argument
            android:name="assetTypeUi"
            app:argType="com.omouravictor.invest_view.presenter.wallet.assets.asset_types.model.AssetTypeUiModel" />
    </fragment>

</navigation>