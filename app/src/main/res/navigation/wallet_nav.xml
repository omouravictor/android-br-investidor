<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/walletNavMenu"
    app:startDestination="@+id/fragmentWallet">

    <fragment
        android:id="@+id/fragmentWallet"
        android:name="com.omouravictor.invest_view.ui.wallet.WalletFragment"
        android:label="@string/wallet"
        tools:layout="@layout/fragment_wallet">
        <action
            android:id="@+id/navToAssetTypeFragment"
            app:destination="@id/fragmentAssetType" />
    </fragment>

    <fragment
        android:id="@+id/fragmentAssetType"
        android:name="com.omouravictor.invest_view.ui.wallet.assets.asset_type.AssetTypeFragment"
        android:label="@string/asset_types"
        tools:layout="@layout/fragment_asset_type">
        <action
            android:id="@+id/navToSaveAssetFragment"
            app:destination="@id/fragmentSaveAsset" />
    </fragment>

    <fragment
        android:id="@+id/fragmentSaveAsset"
        android:name="com.omouravictor.invest_view.ui.wallet.assets.save_asset.SaveAssetFragment"
        tools:layout="@layout/fragment_save_asset">
        <argument
            android:name="assetTypeUi"
            app:argType="com.omouravictor.invest_view.ui.wallet.assets.asset_type.model.AssetTypeUi" />
        <action
            android:id="@+id/navToSearchAssetFragment"
            app:destination="@id/fragmentSearchAsset" />
    </fragment>

    <fragment
        android:id="@+id/fragmentSearchAsset"
        android:name="com.omouravictor.invest_view.ui.wallet.assets.asset_search.SearchAssetFragment"
        tools:layout="@layout/fragment_search_asset">
        <argument
            android:name="assetTypeUi"
            app:argType="com.omouravictor.invest_view.ui.wallet.assets.asset_type.model.AssetTypeUi" />
    </fragment>

</navigation>