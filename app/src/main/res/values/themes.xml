<resources>
    <!-- Base application theme. -->
    <style name="Theme.WiseInvest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/appPrimaryColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/appPrimaryColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/appWindowBackColor</item>
        <item name="android:textColor">@color/appTextColor</item>
        <item name="actionMenuTextAppearance">@style/Theme.WiseInvest.ActionBarMenu</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="Theme.WiseInvest.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WiseInvest.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.WiseInvest.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/appWindowBackColor</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_screen</item>
        <item name="postSplashScreenTheme">@style/Theme.WiseInvest</item>
    </style>

    <style name="Theme.WiseInvest.TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="Theme.WiseInvest.ActionBarMenu" parent="android:TextAppearance.Material.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.WiseInvest.Toolbar">
        <item name="colorControlNormal">@color/green</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="colorControlActivated">@color/green</item>
    </style>

    <style name="Theme.WiseInvest.ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/textSize4</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.WiseInvest.OverlayBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Theme.WiseInvest.BottomSheetModal</item>
    </style>

    <style name="Theme.WiseInvest.BottomSheetModal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="Theme.WiseInvest.Switch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/black</item>
        <item name="android:colorForeground">@color/black</item>
        <item name="colorSwitchThumbNormal">#EDEDED</item>
    </style>

</resources>